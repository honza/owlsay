import textwrap

OWL = """
     \        ,   .   ,
      \       )-_\"\"\"_-(
       \     ./ o\ /o \.
        \   . \__/ \__/ .
         \  ...   V   ...
            ... - - - ...
             .   - -   .
              `-.....-Â´
"""


def textbox(text, width=60):
    if len(text) < width:
        width = len(text) + 1

    boundary = ' ' + ('-' * (width + 1))
    r = [boundary]
    lines = textwrap.wrap(text, width)

    for line in lines:
        line = line.ljust(width - 1)
        r.append('| %s |' % line)

    r.append(boundary)
    r = '\n'.join(r)
    return r


def main(text):
    print(textbox(text))
    print(OWL)


if __name__ == "__main__":
    import sys
    if len(sys.argv) != 2:
        print('Usage: owlsay <message>')
        sys.exit(1)

    main(sys.argv[1])
